{
  "rules": {
    ".read": false,
    ".write": false,

    "public": {
      "messagesById": {
        ".indexOn": ["at"],
        "$msgId": {
          ".read": "auth != null",

          ".write": "auth != null && !data.exists()",

          ".validate": "newData.hasChildren(['uid','text','clientMsgId','clientAt','at'])"
            + " && newData.child('uid').val() === auth.uid"
            + " && newData.child('clientMsgId').val() === $msgId"
            + " && newData.child('text').isString()"
            + " && newData.child('text').val().length >= 1"
            + " && newData.child('text').val().length <= 500"
            + " && newData.child('clientAt').isNumber()"
            + " && newData.child('clientAt').val() > 0"
            + " && newData.child('clientAt').val() <= now + 600000"
            + " && newData.child('clientAt').val() >= now - 2592000000"
        }
      }
    },

    "waiting": {
      "slot": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },

    "presence": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid === $uid"
      }
    },

    "matches": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null"
      }
    },

    "rooms": {
      "$roomId": {
        ".read": "auth != null && data.child('participants').child(auth.uid).val() === true",
        ".write": "auth != null && ( (!data.exists() && newData.child('participants').child(auth.uid).val() === true) || (data.child('participants').child(auth.uid).val() === true) )"
      }
    }
  }
}
